# Data Extraction Pipeline Environment Variables
# Copy this file to .env and fill in your actual credentials
# DO NOT commit the .env file to version control

# =============================================================================
# WhatsApp Business API Configuration (Meta/Facebook)
# =============================================================================
# Get these credentials from Facebook Developer Console
# https://developers.facebook.com/apps/

WHATSAPP_ACCESS_TOKEN=your_whatsapp_business_api_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# =============================================================================
# Twilio WhatsApp API Configuration (Alternative)
# =============================================================================
# Get these credentials from Twilio Console
# https://console.twilio.com/

TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# =============================================================================
# Gmail OAuth2 Configuration (Recommended)
# =============================================================================
# Get these from Google Cloud Console
# https://console.cloud.google.com/

GMAIL_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your_google_client_secret_here
GMAIL_REFRESH_TOKEN=your_refresh_token_here

# =============================================================================
# Email Account Configuration
# =============================================================================

# Primary Email Account
EMAIL_PRIMARY_ADDRESS=your.email@gmail.com
EMAIL_PRIMARY_PASSWORD=your_app_specific_password_here

# Work Email Account (optional)
EMAIL_WORK_ADDRESS=work.email@company.com
EMAIL_WORK_PASSWORD=your_work_email_password_here

# Additional email accounts (add as needed)
# EMAIL_PERSONAL_ADDRESS=personal@outlook.com
# EMAIL_PERSONAL_PASSWORD=your_personal_email_password

# =============================================================================
# Storage Configuration (Optional)
# =============================================================================

# Override default storage location
# STORAGE_BASE_PATH=./extracted_data

# Override default media storage settings
# STORAGE_MAX_FILE_SIZE_MB=100

# =============================================================================
# Notification Configuration (Optional)
# =============================================================================

# Email Notifications
NOTIFICATION_EMAIL_USERNAME=notifications@yourdomain.com
NOTIFICATION_EMAIL_PASSWORD=your_notification_email_password
NOTIFICATION_FROM_EMAIL=pipeline@yourdomain.com

# WhatsApp Notifications (uses same API credentials as extraction)
# NOTIFICATION_WHATSAPP_NUMBERS=+1234567890,+0987654321

# =============================================================================
# Logging Configuration (Optional)
# =============================================================================

# Override default log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# Override default log file location
# LOG_FILE_PATH=./logs/pipeline.log

# =============================================================================
# Development and Testing (Optional)
# =============================================================================

# Enable debug mode for development
# DEBUG_MODE=false

# Use mock APIs for testing (true/false)
# MOCK_APIS=false

# Override config file location
# CONFIG_FILE=config.yaml

# Database URL for advanced features (future use)
# DATABASE_URL=sqlite:///pipeline.db

# =============================================================================
# Security Configuration (Optional)
# =============================================================================

# Encryption key for sensitive data (generate with: python -c "import secrets; print(secrets.token_hex(32))")
# ENCRYPTION_KEY=your_32_character_hex_encryption_key_here

# API rate limiting overrides
# WHATSAPP_RATE_LIMIT_PER_MINUTE=60
# EMAIL_RATE_LIMIT_PER_MINUTE=120

# =============================================================================
# Scheduler Configuration (Optional)
# =============================================================================

# Override scheduler settings
# SCHEDULER_ENABLED=false
# SCHEDULER_DAILY_TIME=02:00
# SCHEDULER_TIMEZONE=UTC

# =============================================================================
# InfoBox Document Processing Configuration
# =============================================================================

# Unstructured API for document parsing
UNSTRUCTURED_API_KEY=your_unstructured_api_key_here

# Google Gemini API for AI summarization and translation
GOOGLE_API_KEY=your_gemini_api_key_here

# Email configuration for document assignment
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

# KMRL Role-based Email Addresses (for document assignment)
HR_EMAIL=hr@kmrl.co.in
ENGINEER_EMAIL=engineer@kmrl.co.in
INSPECTOR_EMAIL=inspector@kmrl.co.in
CONTRACTOR_EMAIL=contractor@kmrl.co.in
MANAGER_EMAIL=manager@kmrl.co.in
FINANCE_EMAIL=finance@kmrl.co.in
GENERAL_EMAIL=general@kmrl.co.in
SAFETY_EMAIL=safety@kmrl.co.in
OPERATIONS_EMAIL=operations@kmrl.co.in